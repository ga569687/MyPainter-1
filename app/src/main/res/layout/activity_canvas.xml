<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/LinearLayout1"
    android:orientation="horizontal"
    tools:context="com.example.painter.Canvas"
    android:background="#FFFFFF">

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/settingbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:src="@drawable/ic_settings_grey600_36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="5dp"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_marginBottom="5dp" />

        <ImageButton
            android:id="@+id/ImageButton03"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:id="@+id/ImageButton02"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:id="@+id/ImageButton01"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="#FFFFFF"
            android:adjustViewBounds="false"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/imageButton10"
            android:src="#ffdddddd"
            android:background="#ffdddddd"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton9"
            android:background="@drawable/blackbutton"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/imageButton"
            android:background="@drawable/redbutton"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:background="@drawable/orangebutton"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:background="@drawable/yellowbutton"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton6"
            android:background="@drawable/greenbutton"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton7"
            android:layout_alignBottom="@+id/view1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bulebutton"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton8"
            android:background="@drawable/purplebutton"
            android:layout_marginLeft="10dp" />

    </LinearLayout>


</RelativeLayout>
