<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="14"
    android:background="@drawable/personalsetting_bg"
    tools:context="com.example.painter.PersonalSetting"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:id="@+id/nickNameTxv"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="暱稱："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/emailTxv"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="E-mail："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/passwordTxv"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="密碼："
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nickNameEdt"
        android:layout_column="5"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/emailEdt"
        android:layout_column="5"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText3"
        android:layout_column="5"
        android:layout_gravity="left|center_vertical"
        android:layout_row="2"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/gallerySharingTxv"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="Gallery分享"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/videoDisplayTxv"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="影音顯示頭像"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/gSharingSwitch"
        android:layout_column="5"
        android:layout_gravity="left|center_vertical"
        android:layout_row="3" />

    <Switch
        android:id="@+id/vSDisplaySwitch"
        android:layout_column="5"
        android:layout_gravity="left|top"
        android:layout_row="4" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_gravity="right|fill_vertical"
        android:layout_row="5"
        android:text="儲存" />

    <Button
        android:id="@+id/changeImgBtn"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginRight="10dp"
        android:paddingRight="10dip"
        android:layout_row="3"
        android:minHeight="20dp"
        android:text="修改圖片" />

    <ImageView
        android:id="@+id/quickContactBadge1"
        android:layout_column="0"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:src="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dip"/>

</GridLayout>